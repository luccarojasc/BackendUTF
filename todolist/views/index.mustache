  <body>
    <div class="container">
      <h1>TODO APP</h1>
      <h2>Tarefas</h2>
      <ul>
        {{#tasks}}
          <li class="prioridade-{{prioridade}}">
            {{name}} ({{prioridade}})
            <a href="/?tid={{id}}">edit</a>
            <a href="/tarefas/del/{{id}}">done</a>
          </li>
        {{/tasks}}
      </ul>

      <h2>Nova tarefa</h2>
      <form action="/tarefas" method="POST">
        <input type="hidden" name="id" value="{{task.id}}">
        <div class="mb-3">
          <label for="nome" class="form-label">Nome da Tarefa</label>
          <input type="text" class="form-control" id="nome" name="nome" value="{{task.name}}" placeholder="Nome da Tarefa">
        </div>
        <div class="mb-3">
          <label for="prioridade" class="form-label">Nome da Tarefa</label>
          <input type="text" class="form-control" id="prioridade" name="prioridade" value="{{task.prioridade}}" placeholder="Prioridade da Tarefa">
        </div>
        <button type="submit" class="btn btn-primary">Salvar</button>
      </form>
      <p>{{erro}}</p>

      <!-- Optional JavaScript; choose one of the two! -->

      <!-- Option 1: Bootstrap Bundle with Popper -->
